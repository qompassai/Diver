root = true

# EditorConfig Legend:
# charset = utf-8                # Sets character encoding to UTF-8 for all files.
# end_of_line = lf               # Uses "line feed" (LF) as the end of line character for all files.
# insert_final_newline = true    # Adds a newline character at the end of each file to ensure consistency.
# trim_trailing_whitespace = true # Removes unnecessary whitespace at the end of each line, except where explicitly turned off.
# indent_style = space           # Defines indentation style (space or tab).
# indent_size = X                # Sets the number of spaces per indentation level.
# tab_width = X                  # Defines the width of a tab character, only applicable if indent_style = tab.
# max_line_length = X            # Specifies the maximum length of a line (where applicable).

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Lua settings
[*.lua]
indent_style = space
indent_size = 4
tab_width = 4

# Python settings
[*.py]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120  # Set as needed, e.g., 150

# Dockerfile/Containerfile settings
[Dockerfile]
indent_style = space
indent_size = 2
tab_width = 2

[Containerfile]
indent_style = space
indent_size = 2
tab_width = 2

# Bash and Shell script settings
[*.sh]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 150

[*.bash]
indent_style = space
indent_size = 2
tab_width = 2

# Rust settings
[*.rs]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100

# Markdown settings
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
max_line_length = 150
indent_style = space
indent_size = 2
tab_width = 2

